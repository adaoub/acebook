<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/stylesheets/components.css" />
</head>


<body>
<h1 class="title">Hi {{user.firstName}}! Welcome to your profile</h1> 
<a href="requests" class="friend-requests" > Friend requests </a>


<form
  id="new-post-form"
  action="/posts"
  enctype="multipart/form-data"
  method="POST"
>
  <input
    class="input-text2"
    id="message"
    type="text"
    name="message"
    placeholder="Make a new post"
  />
  <input id="user" type="hidden" name="user" value={{user._id}} />
  <input class="choose-file-btn" class="choose-file-btn" type="file" name="image" />
  <input class="input-button2" type="submit" value="Submit" />
</form>

<ul class="posts">

  <div>
    {{#each posts}}
      {{! <li> }}
      <div class="card">

        {{! profile pic }}
        {{!-- <div> --}}
          {{#if this.user.photo.photoExists}}

          <img
            class="img-card"
            src="data:image/png;base64,{{this.user.photo.code}}"
            alt="avatar"
          />

        {{else}}
          <img class="img-card" src="/images/default-pic.png" alt="avatar" />

        {{/if}}
        {{!-- </div> --}}
        {{! message }}
        <h4><b>{{this.user.firstName}} {{this.user.lastName}}</b></h4>
        <div class="message">
          <p>{{this.message}}</p>
        </div>
        {{! if uploading a photo }}
        <div class="photos">
          {{#if this.photo.photoExists}}

            <img
              src="data:image/png;base64,{{this.photo.code}}"
              alt=""
              width="100px"
            />

          {{/if}}
        </div>

        {{! likes section }}
        <div class="likes">
          {{this.likes.length}}
          likes
          {{this.createdAt}}

          <form id="likes-form" action="/posts/{{this._id}}" method="post">

            <input type="submit" value="likes" />
          </form>
          {{#if this.remarks.length}}
            <ul>
              Comments=
            </ul>
            {{#each this.remarks}}
              <ul>
                {{this.content}}
                by
                {{#matches ../user._id this.user.id }}
        You
        {{else}}
                <a
                  href="users/{{this.user._id}}"
                  class="userLink"
                >{{this.user.firstName}}</a>
          {{/matches}}
              </ul>
              <ul>
                <form
                  id="comment-likes-form"
                  action="/posts/comments/likes/{{this._id}}"
                  method="POST"
                >

                  <input name="commentLikes" type="submit" value="Like" />
                </form>
                {{this.commentLikes.length}}
                likes
              </ul>
            {{/each}}

          {{else}}

            <ul>
              No Comments have been made
            </ul>
          {{/if}}
          <form
            id="new-comment-form"
            action="/posts/comments/{{this._id}}"
            method="post"
          >
            <label for="comments"> comment here</label>
            <input type="text" value="" name="content" />

            <input type="submit" value="Submit" />

          </form>
        </div>
      </div>
    {{/each}}
  </div>
</ul>

</body>
</html>